    {
      "cell_type": "code",
      "source": [
        "# --- Create Interactive Widgets ---\n",
        "sens_slider = widgets.FloatSlider(\n",
        "    value=3.0, min=1.0, max=6.0, step=0.1, description='ΔT_2x (°C):',\n",
        "    continuous_update=False, readout=True, readout_format='.1f',\n",
